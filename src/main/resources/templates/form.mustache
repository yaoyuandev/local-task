<form hx-post="/run" hx-target="#list">
    <div class="row">
        <div class="row">
            <div class="input-group col">
                <span class="input-group-text">name</span>
                <input name="name" class="form-control" placeholder="task">
            </div>
            <div class="input-group col">
                <input class="btn btn-primary" type="submit" value="run" />
            </div>
        </div>
        <div class="input-group col">
            <span class="input-group-text">bash -c</span>
            <textarea class="form-control" name="cmd" placeholder="echo hello"></textarea>
        </div>
    </div>
</form>
